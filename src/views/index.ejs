<!DOCTYPE html>
<head>
  <title>Pusher Test</title>
  <script src="https://js.pusher.com/7.2/pusher.min.js"></script>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
  <script>
    Pusher.logToConsole = true;

    var pusher = new Pusher('5c803d95f54b1d5a48e6', {
      cluster: 'us2'
    });

    var channel = pusher.subscribe('my-channel');
    channel.bind('my-event', function(data) {
      // alert(JSON.stringify(data));
      const product_data = data.message
      const values = product_data.split(",")
      console.log(values)
      const temperatura = document.querySelector('#temperatura');
      const code = document.querySelector('#code');
      const name = document.querySelector('#name');
      const price = document.querySelector('#price');
      temperatura.innerHTML=values[0];
      code.value=values[0];
      name.value=values[1];
      price.value=values[2];
    });
  </script>
</head>
<body>

  <div class="container">
    <div class="col-10">
      <h1>Pusher Test</h1>
    </div>
    <div class="col-10">
      <div class="card" style="width: 18rem;">
        <h1 id="temperatura"></h1>
        <div class="card-body">
          <h5 class="card-title" >TEMPERATURA</h5>
        </div>
      </div>
    </div>

  </div>
  <br>
  <br>
  <div class="container">
    <form action="" class="card" style="width: 25rem;">
      
      <div class="card-body">
        <h3>Datos de Producto</h3>
        <div class="mb-3">
          <label for="code" class="form-label">Codigo</label>
          <input type="text" id="code" class="form-control">
        </div>
        <div class="md-3">
          <label for="name" class="form-label">Nombe</label>
          <input type="text" id="name" class="form-control">
        </div>
        <div class="md-3">
          <label for="price" class="form-label">Precio</label>
          <input type="text" id="price" class="form-control">
        </div>
        <br>
      </div>
    </form>
  </div>
</body>